<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bright_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:text="Bright" />

        <TextView
            android:id="@+id/Semidull_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:text="Semi Dull" />

        <TextView
            android:id="@+id/fulldull_cot_look_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Full Dull / Cot Look" />

        <TextView
            android:id="@+id/stretch_lycra_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Stretch / Lycra" />

        <TextView
            android:id="@+id/catonic_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Catonic" />

        <TextView
            android:id="@+id/airtex_cooltex_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:text="Airtex / Cooltex" />

        <TextView
            android:id="@+id/blackdope_dyed_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="Black Dope Dyed" />

        <TextView
            android:id="@+id/FDY_product_t_dialog"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:text="FDY" />
    </LinearLayout>
</LinearLayout>