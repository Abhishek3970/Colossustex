<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_settings"
                android:drawableTint="#ffffff"
                android:paddingStart="88dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="  Settings"
                android:textColor="@color/cardview_light_background"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/closeButtonNotificationSetting"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications for Indian cotton prices"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7AAAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications for Indian domestic yarn prices"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7AAAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications for Indian export yarn prices"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7AAAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications for Bangladeshi domestic yarn prices"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch4"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7AAAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications with sound"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch5"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7AAAAAAA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingStart="5dp"
                android:text="Notifications with vibration"
                android:textColor="@android:color/black"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch6"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>