<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="2dp">

        <ImageView
            android:id="@+id/close_dialog_buy_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_close2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/dialog_filter_text"
            android:padding="10dp"
            android:src="@drawable/ic_filter_list_black_24dp" />

        <TextView
            android:id="@+id/dialog_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="Filters"
            android:textColor="#fff"
            android:textSize="19sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox_andaman_and_nicobar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Andaman and Nicobar Island"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_andra_pradesh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Andra Pradeh"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_arunachal_pradesh"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Arunachal Pradesh"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_assam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Assam"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_bihar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"


                android:paddingStart="4dp"
                android:text="Bihar"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_chandigarh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"

                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Chandighar"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_daman_and_diu"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Daman and Diu"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

            <CheckBox
                android:id="@+id/checkBox_dader_and_nagar_haveli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="4dp"
                android:buttonTint="@color/colorPrimary"
                android:paddingStart="4dp"
                android:text="Dadar and Nagar Haveli"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#22FFFFFF" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:text="APPLY"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>